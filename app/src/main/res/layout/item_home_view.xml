<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/design_margin"
    android:paddingLeft="@dimen/design_margin"
    android:paddingRight="@dimen/design_margin">

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/color_text1"
        android:text="标题飞洒发生法萨芬撒飞洒发沙发沙发沙发标题飞洒发生法萨芬撒飞洒发沙发沙发沙发"/>

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_design_view_size"
        android:layout_below="@+id/title_view"
        android:textColor="@color/color_primary"
        android:text="用户名"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/two_design_view_size"
        android:layout_alignTop="@+id/name_view"
        android:layout_toRightOf="@+id/name_view"
        android:textColor="@color/color_text3"
        android:text="1分钟前"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/design_margin"
        android:layout_below="@+id/name_view"
        android:background="@color/color_primary_gary_dark"/>

</RelativeLayout>
