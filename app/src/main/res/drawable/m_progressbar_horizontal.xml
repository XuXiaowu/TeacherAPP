<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>

            <corners android:radius="0dip" />

            <gradient

                android:angle="0"

                android:centerColor="@color/color_primary_gary_dark"

                android:centerY="0"

                android:endColor="@color/color_primary_gary_dark"

                android:startColor="@color/color_primary_gary_dark"

                />

        </shape>

    </item>

    <item android:id="@android:id/progress"

        >

        <clip>

            <shape>

                <corners android:radius="0dip" />

                <gradient
                    android:angle="0"
                    android:centerColor="@color/color_primary"
                    android:centerY="0.75"
                    android:endColor="@color/color_primary"
                    android:startColor="@color/color_primary"/>

            </shape>

        </clip>

    </item>

    <item android:id="@android:id/secondaryProgress"
        >
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#fed7ec"
                    android:centerY="0.75"
                    android:endColor="#fed7ec"
                    android:startColor="#fed7ec" />

            </shape>

        </clip>

    </item>
</layer-list>
