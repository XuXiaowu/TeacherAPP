<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/user_info_contain_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_home_head_view_bg">

        <com.lichen.teacher.view.CircleImageView
            android:id="@+id/user_head_view"
            android:layout_width="@dimen/seven_design_view_size"
            android:layout_height="@dimen/seven_design_view_size"
            android:layout_marginTop="@dimen/two_design_view_size"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_marginBottom="@dimen/two_design_view_size"
            android:src="@drawable/user_default_head" />

        <ImageView
            android:id="@+id/sex_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/seven_design_view_size"
            android:layout_marginRight="@dimen/half_design_view_size"
            android:layout_alignRight="@+id/user_head_view"
            android:src="@drawable/sex_man_icon"/>

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/two_design_view_size"
            android:layout_marginLeft="@dimen/one_design_view_size"
            android:layout_toRightOf="@+id/user_head_view"
            android:textColor="@color/color_white"
            android:textSize="@dimen/big_text_size"
            android:text="漫画南瓜"/>

        <TextView
            android:id="@+id/vip_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/half_design_view_size"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:textColor="@color/color_text3"
            android:text="头衔"/>

        <TextView
            android:id="@+id/tag_view1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/half_design_view_size"
            android:paddingRight="@dimen/half_design_view_size"
            android:layout_marginTop="@dimen/half_design_view_size"
            android:layout_below="@+id/vip_status_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:textColor="@color/color_text3"
            android:background="@color/color_text2"
            android:text="标签"/>

        <TextView
            android:id="@+id/tag_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/half_design_view_size"
            android:paddingRight="@dimen/half_design_view_size"
            android:layout_marginLeft="@dimen/half_design_view_size"
            android:layout_marginTop="@dimen/half_design_view_size"
            android:layout_below="@+id/vip_status_view"
            android:layout_toRightOf="@+id/tag_view1"
            android:textColor="@color/color_text3"
            android:background="@color/color_text2"
            android:text="标签2"/>

        <TextView
            android:id="@+id/tag_view3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/half_design_view_size"
            android:paddingRight="@dimen/half_design_view_size"
            android:layout_marginLeft="@dimen/half_design_view_size"
            android:layout_marginTop="@dimen/half_design_view_size"
            android:layout_below="@+id/vip_status_view"
            android:layout_toRightOf="@+id/tag_view2"
            android:textColor="@color/color_text3"
            android:background="@color/color_text2"
            android:text="标签3"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/two_design_view_size"
            android:layout_marginRight="@dimen/view_padding_size">

            <ImageView
                android:id="@+id/message_notice_view"
                android:layout_width="@dimen/three_design_view_size"
                android:layout_height="@dimen/three_design_view_size"
                android:layout_toLeftOf="@+id/arrow_view"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:src="@drawable/home_message_notice_icon"
                android:background="?android:attr/selectableItemBackground"/>

            <ImageView
                android:id="@+id/new_icon_view"
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:layout_marginTop="@dimen/half_design_view_size"
                android:layout_marginLeft="@dimen/two_design_view_size"
                android:background="@drawable/red_circle_bg"/>

        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/live_request_function_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/user_info_contain_view"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/live_request_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_live_request_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/live_request_icon_view"
                android:text="@string/home_live_request"/>


        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/check_progress_function_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/user_info_contain_view"
        android:layout_toRightOf="@+id/live_request_function_view"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/already_teaching_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_message_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/already_teaching_icon_view"
                android:text="@string/home_check_progress"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wait_live_function_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/user_info_contain_view"
        android:layout_toRightOf="@+id/check_progress_function_view"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/not_teaching_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_not_teaching_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/not_teaching_icon_view"
                android:text="@string/home_wait_teaching"/>

        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/wait_live_function_view"
        android:background="@color/color_primary_gary_dark"/>

    <RelativeLayout
        android:id="@+id/live_leave_message_function_views"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/live_request_function_view"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/live_request_icon_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_class_manage_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/live_request_icon_views"
                android:text="@string/home_live_leave_message"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/live_record_function_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/live_request_function_view"
        android:layout_toRightOf="@+id/live_leave_message_function_views"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/class_manage_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_live_record_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/class_manage_icon_view"
                android:text="@string/home_live_leave_record"/>

        </RelativeLayout>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/my_profit_function_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="33.3333%w"
        app:layout_widthPercent="33.3333%w"
        android:layout_below="@+id/live_request_function_view"
        android:layout_toRightOf="@+id/live_record_function_view"
        android:background="?android:attr/selectableItemBackground">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/my_profit_icon_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/home_my_profit_icon"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:layout_below="@+id/my_profit_icon_view"
                android:text="@string/home_my_profit"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leave_message_title_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_profit_function_view"
        android:background="@color/color_primary_gary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_design_view_size"
            android:layout_marginBottom="@dimen/one_design_view_size"
            android:layout_centerHorizontal="true"
            android:text="@string/home_new_leave_message"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/leave_message_status_contain_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_heightPercent="53.63%w"
        app:layout_widthPercent="100%w"
        android:layout_below="@+id/leave_message_title_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/leave_message_status_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/home_new_leave_message_empty"/>

        <ProgressBar
            android:id="@+id/loading_view"
            style="?android:attr/progressBarStyleInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone"/>

    </RelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
