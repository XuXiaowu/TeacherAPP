<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.lichen.teacher.view.CircleImageView
                    android:id="@+id/user_head_view"
                    android:layout_width="@dimen/seven_design_view_size"
                    android:layout_height="@dimen/seven_design_view_size"
                    android:layout_marginTop="@dimen/two_design_view_size"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/test_miku"/>

                <ImageView
                    android:id="@+id/sex_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/seven_design_view_size"
                    android:layout_alignRight="@id/user_head_view"
                    android:src="@drawable/sex_man_icon"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/one_design_view_size"
                    android:layout_marginBottom="@dimen/two_design_view_size"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/user_head_view"
                    android:textColor="@color/color_text2"
                    android:text="啦啦啦啦"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/teacher_time_contain_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/two_design_view_size"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/clock_icon_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/user_clock_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/half_design_view_size"
                            android:layout_toRightOf="@+id/clock_icon_view"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_text1"
                            android:text="@string/user_teaching_time"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_design_view_size"
                        android:layout_marginBottom="@dimen/two_design_view_size"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/teacher_time_contain_view"
                        android:textSize="@dimen/bigger_text_size"
                        android:textColor="@color/color_text1"
                        android:text="0.0"/>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/profit_contain_view"           android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/two_design_view_size"
                        android:layout_centerHorizontal="true">

                        <ImageView
                            android:id="@+id/coin_icon_view"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/user_coin_icon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/half_design_view_size"
                            android:layout_toRightOf="@+id/coin_icon_view"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/color_text1"
                            android:text="@string/user_profit"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/one_design_view_size"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/profit_contain_view"
                        android:textColor="@color/color_text1"
                        android:textSize="@dimen/bigger_text_size"
                        android:text="0.0"/>

                </RelativeLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/one_design_view_size"
                android:background="@color/color_primary_gary"/>

            <RelativeLayout
                android:id="@+id/feedback_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentTop="true"
                    android:background="@color/color_primary_gary_dark"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_text1"
                    android:text="@string/more_feedback"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gary_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/clear_cache_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_text1"
                    android:text="@string/more_clear_cache"/>

                <TextView
                    android:id="@+id/catch_size_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textSize="@dimen/middle_text_size"
                    android:textColor="@color/color_text2"
                    android:text="0KB"/>

                <ProgressBar
                    android:id="@+id/clear_cache_progress_view"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gary_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/check_update_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_text1"
                    android:text="@string/more_check_update"/>

                <ProgressBar
                    android:id="@+id/check_update_progress_view"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gary_dark"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/custom_service_phone_view"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="?android:attr/selectableItemBackground">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:textColor="@color/color_text1"
                    android:text="@string/more_custom_service_phone"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/two_design_view_size"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/right_arrow_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/color_primary_gary_dark"/>

            </RelativeLayout>

            <Button
                android:id="@+id/exit_login_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/two_design_view_size"
                android:layout_marginLeft="@dimen/two_design_view_size"
                android:layout_marginRight="@dimen/two_design_view_size"
                android:textColor="@color/color_white"
                android:text="@string/more_exit_login"
                android:background="@drawable/red_btn_selector"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
