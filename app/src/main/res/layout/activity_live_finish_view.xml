<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".apps.ActivityLiveCheckDetails">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/four_design_view_size">

        <com.zhy.android.percent.support.PercentRelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/cover_view"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                android:src="@drawable/cover_default"
                app:layout_heightPercent="56.25%w" />

            <RelativeLayout
                android:id="@+id/cover_eview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="56.25%w"
                android:background="@color/color_transparent_gary2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/five_design_view_size"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:textColor="@color/color_text1"
                    android:textSize="@dimen/big_text_size"
                    android:text="@string/live_finish_title"
                    android:background="@color/color_transparent_white"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/title_contain_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cover_view"
                android:layout_marginTop="@dimen/one_design_view_size">

                <ImageView
                    android:id="@+id/title_icon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:src="@drawable/live_type_icon" />

                <TextView
                    android:id="@+id/activity_title_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/one_design_view_size"
                    android:layout_toRightOf="@+id/title_icon_view"
                    android:text="课程名称" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/time_contain_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title_contain_view"
                android:layout_marginTop="@dimen/one_design_view_size">

                <ImageView
                    android:id="@+id/time_icon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:src="@drawable/live_time_icon" />

                <TextView
                    android:id="@+id/date_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/one_design_view_size"
                    android:layout_toRightOf="@+id/time_icon_view"
                    android:text="时间" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/price_contain_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time_contain_view"
                android:layout_marginTop="@dimen/one_design_view_size">

                <ImageView
                    android:id="@+id/price_icon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:src="@drawable/live_price_icon" />

                <TextView
                    android:id="@+id/price_edit_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/one_design_view_size"
                    android:layout_toRightOf="@+id/price_icon_view"
                    android:text="¥ 9.9" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/user_num_contain_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price_contain_view"
                android:layout_marginTop="@dimen/one_design_view_size">

                <ImageView
                    android:id="@+id/user_num_icon_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/two_design_view_size"
                    android:src="@drawable/live_user_num_icon" />

                <TextView
                    android:id="@+id/user_num_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/one_design_view_size"
                    android:layout_toRightOf="@+id/user_num_icon_view"
                    android:text="55人上课" />

            </RelativeLayout>

            <Button
                android:id="@+id/go_to_chat_btn"
                android:layout_width="200dp"
                android:layout_height="@dimen/four_design_view_size"
                android:layout_below="@+id/user_num_contain_view"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/eight_design_view_size"
                android:background="@drawable/blue_btn_selector"
                android:text="@string/live_finish_go_to_chat"
                android:textColor="@color/color_white"
                android:textSize="@dimen/bigger_text_size"
                android:visibility="visible" />

            <Button
                android:id="@+id/back_to_home_btn"
                android:layout_width="200dp"
                android:layout_height="@dimen/four_design_view_size"
                android:layout_below="@+id/go_to_chat_btn"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/one_design_view_size"
                android:background="@drawable/hollow_blue_btn_selector"
                android:text="@string/live_finish_back_to_home"
                android:textColor="@drawable/hollow_blue_btn_text_selector"
                android:textSize="@dimen/bigger_text_size"
                android:visibility="visible" />

        </com.zhy.android.percent.support.PercentRelativeLayout>

    </ScrollView>

</com.zhy.android.percent.support.PercentRelativeLayout>
