<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/cover_view"
        android:layout_width="@dimen/one_hundred_design_view_size"
        android:layout_height="@dimen/seventy_five_design_view_size"
        android:layout_gravity="center"
        android:layout_margin="@dimen/one_design_view_size"
        android:scaleType="centerCrop"
        android:src="@drawable/cover_default" />

    <TextView
        android:id="@+id/activity_title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/one_design_view_size"
        android:layout_toRightOf="@+id/cover_view"
        android:layout_marginTop="@dimen/one_design_view_size"
        android:singleLine="true"
        android:text="标题"
        android:textColor="@color/color_text1" />

    <RelativeLayout
        android:id="@+id/watch_count_contain_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover_view"
        android:layout_below="@+id/activity_title_view"
        android:layout_marginTop="@dimen/one_design_view_size">

        <ImageView
            android:id="@+id/watch_count_icon_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/live_blue_person_icon"/>

        <TextView
            android:id="@+id/watch_count_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/half_design_view_size"
            android:layout_toRightOf="@+id/watch_count_icon_view"
            android:layout_centerVertical="true"
            android:text="99"
            android:textColor="@color/color_text3"
            android:textSize="@dimen/middle_text_size" />

    </RelativeLayout>

    <TextView
        android:id="@+id/date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cover_view"
        android:layout_below="@+id/watch_count_contain_view"
        android:layout_marginTop="@dimen/one_design_view_size"
        android:singleLine="true"
        android:text="10-10 10:10"
        android:textColor="@color/color_text3"
        android:textSize="@dimen/middle_text_size" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true">

        <Button
            android:id="@+id/status_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/three_design_view_size"
            android:layout_marginRight="@dimen/view_padding_size"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_white"
            android:background="@drawable/blue_right_angle_btn_selector"
            android:text="@string/live_my_start"/>

        <TextView
            android:id="@+id/count_down_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/view_padding_size"
            android:layout_marginTop="@dimen/four_design_view_size"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/start_btn"
            android:textColor="@color/color_text3"
            android:textSize="@dimen/small_text_size"
            android:text="距离直播还有22:22:22"/>

    </RelativeLayout>

