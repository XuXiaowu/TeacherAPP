<?xml version="1.0" encoding="utf-8"?>
<com.zhy.android.percent.support.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.lichen.teacher.view.TouchableImageView
        android:id="@+id/cover_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="55%w"
        android:scaleType="fitXY"
        android:src="@drawable/testtesttesttesttesttesttesttesttest"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/one_design_view_size"
        android:paddingTop="@dimen/half_design_view_size"
        android:paddingBottom="@dimen/half_design_view_size"
        android:paddingLeft="@dimen/one_design_view_size"
        android:paddingRight="@dimen/one_design_view_size"
        android:background="@drawable/live_cover_title_bg"
        android:textColor="@color/color_primary"
        android:text="今天20:30开播"/>

    <TextView
        android:id="@+id/title_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/one_design_view_size"
        android:layout_marginLeft="@dimen/one_design_view_size"
        android:layout_alignBottom="@+id/cover_view"
        android:textColor="@color/color_white"
        android:shadowColor="@color/color_text1"
        android:shadowRadius="10"
        android:text="会计实务全能班"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/one_design_view_size"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/title_view"
        android:textColor="@color/color_white"
        android:shadowColor="@color/color_text1"
        android:shadowRadius="10"
        android:text="10人购买"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cover_view">

        <com.lichen.teacher.view.CircleImageView
            android:id="@+id/user_cover_view"
            android:layout_width="@dimen/four_design_view_size"
            android:layout_height="@dimen/four_design_view_size"
            android:layout_margin="@dimen/one_design_view_size"
            android:src="@mipmap/test_miku"/>

        <TextView
            android:id="@+id/user_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/user_cover_view"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="初音未来"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/one_design_view_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text3"
            android:text="3课时 | ¥88.0"/>

    </RelativeLayout>

</com.zhy.android.percent.support.PercentRelativeLayout>
