<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.lichen.teacher.apps.ActivitySetting">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/title_bar_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size">

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_primary">

            <ImageView
                android:id="@+id/back_view"
                android:layout_width="@dimen/five_design_view_size"
                android:layout_height="match_parent"
                android:src="@drawable/left_arrow_white"
                android:scaleType="centerInside"
                android:background="?android:attr/selectableItemBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/user_setting"
                android:textSize="@dimen/bigger_text_size"
                android:textColor="@color/color_white"/>

        </RelativeLayout>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/title_bar_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_live_remind"/>

        <Switch
            android:id="@+id/wifi_switch_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_alignParentRight="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clear_catch_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/cut_line_one_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_clear_cache"/>

        <TextView
            android:id="@+id/catch_size_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/middle_text_size"
            android:text="0KB"/>

        <ProgressBar
            android:id="@+id/clear_catch_progress_view"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <View
        android:id="@+id/cut_line_one_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_design_view_size"
        android:layout_below="@+id/wifi_view"
        android:background="@color/color_primary_gary"/>

    <RelativeLayout
        android:id="@+id/feedback_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/check_update_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_feedback"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/cut_line_two_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_recommend_to_friend"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/cut_line_two_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_check_update"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/five_design_view_size"
        android:layout_below="@+id/cut_line_two_view"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:textColor="@color/color_text1"
            android:text="@string/setting_about"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/two_design_view_size"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow_gray" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/color_primary_gary_dark"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/about_view"
        android:background="@color/color_primary_gary"/>

</LinearLayout>
